<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<session-config>
	   <tracking-mode>COOKIE</tracking-mode>
    </session-config>
	<display-name>LaunchTestRun</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list> 
	<servlet>
		<servlet-name>ProblemServlet</servlet-name>
		<servlet-class>com.openhorizonsolutions.ltr.ProblemServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IndexPageServlet</servlet-name>
		<jsp-file>/assets/welcome.jsp</jsp-file>
	</servlet>
	<servlet>
        <servlet-name>HelpServlet</servlet-name>
        <jsp-file>/assets/help.jsp</jsp-file>
    </servlet>
	<servlet>
		<servlet-name>SolutionUploadHandler</servlet-name>
		<servlet-class>com.openhorizonsolutions.ltr.SolutionUploadHandler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProblemServlet</servlet-name>
		<url-pattern>/listproblems.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProblemServlet</servlet-name>
		<url-pattern>/problem.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProblemServlet</servlet-name>
		<url-pattern>/problem.html/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SolutionUploadHandler</servlet-name>
		<url-pattern>/submit-solution</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexPageServlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexPageServlet</servlet-name>
		<url-pattern>/index.html/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>HelpServlet</servlet-name>
        <url-pattern>/help.html</url-pattern>
    </servlet-mapping>
	<error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/assets/exception.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/assets/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/assets/403.jsp</location>
    </error-page>
    <security-constraint>
	   <web-resource-collection>
	   	<web-resource-name>HTTP-Protected-Resource-1</web-resource-name>
		<description>This resource is restricted</description>
		<url-pattern>/forensics.txt</url-pattern>
	   </web-resource-collection>
	    <auth-constraint>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>